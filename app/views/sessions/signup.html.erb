<%= form_for(:user, :html => {class: "ui form", roll: "form"}) do |form| %>    
    <div class="field">  
      <%= form.label :username %>
      <%= form.text_field :username, placeholder: "Enter username", autofocus: true %>
    </div>
    <div class="field">   
      <%= form.label :password %>
      <%= form.password_field :password, placeholder: "Enter password", autofocus: true %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-ms-10">
        <%= form.submit("Sign Up", class: 'btn btn-primary') %>
      </div>
    </div>    
  <% end %>    